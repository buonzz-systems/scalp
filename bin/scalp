#!/usr/bin/env php
<?php

error_reporting(E_ALL);

$files = array(
  __DIR__ . '/../../vendor/autoload.php',
  __DIR__ . '/../../../../autoload.php',
  __DIR__ . '/../../../autoload.php',
  '../vendor/autoload.php',
  'vendor/autoload.php',  
);

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;

        define('SCALP_COMPOSER_INSTALL', $file);

        break;
    }
}

if (!defined('SCALP_COMPOSER_INSTALL')) {
    /*die(
      'You need to set up the project dependencies using the following commands:' . PHP_EOL .
      'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
      'php composer.phar install' . PHP_EOL
    );
    */
}



use Buonzz\Scalp\Commands\ElasticSearch\IndexCommand;
use Buonzz\Scalp\Commands\Metadata\AnalyzeCommand;
use Dotenv\Dotenv;

use Symfony\Component\Console\Application;


try{
  $dotenv = new Dotenv(getcwd());
  $dotenv->load();
}catch(\Dotenv\Exception\InvalidPathException $e)
{
  putenv('DB_HOSTNAME=localhost');
  putenv('DB_NAME=metadata');
  putenv('DB_USER=null');
  putenv('DB_PASSWORD=null');
}

$application = new Application("Scalp Metadata Extraction Tool by Darwin Biler", "v1.1");
$application->add(new IndexCommand);
$application->add(new AnalyzeCommand);
$application->run();
